// Sueldo Neto.cpp : Defines the entry point for the console application.
//

#include"stdafx.h"
#include<iostream>
#include"conio.h"
using namespace std;

void main() {
	float a;
	float b;
	float c;
	float h;
	float i;
	float sueldo;
	cout << "Ingrese el numero de empleados: " << endl;
	cin >> a;
	for (h=1;h<=a;h++) {
		cout << "Ingrese las horas trabajadas: " << endl;
		cin >> b;
		cout << "Ingrese el pago por hora: " << endl;
		cin >> c;
		i = 0.13;
		sueldo = (c*b)-((c*b)*i);
		cout << "El sueldo es: " << sueldo << endl;
	}
	getch();
}
