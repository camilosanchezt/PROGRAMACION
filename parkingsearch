 		cout << "  2. Parqueos Privados" << endl; 
		cout << "  0. Salir" << endl; 
 		cout << endl; 
 		cout << "  ELIGE UNA OPCION: "; 
 		cin >> opcion; 
 		system ("cls"); 
 
 
 	switch(opcion){ 
 		case 1: publico();break; 
 		case 0: cout << "Salir"; break; 
 		default: cout << "Opcion invalida"; 
 		} 
 		}while (opcion!=0); 
 	getch(); 
 } 
 
 
